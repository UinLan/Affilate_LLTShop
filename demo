import os
import sys
import io
import time
import random
import argparse
import logging
import requests
from pymongo import MongoClient
import facebook
from datetime import datetime, timedelta
from dotenv import load_dotenv
from bson import ObjectId
from tenacity import retry, stop_after_attempt, wait_exponential, retry_if_exception_type
import json

sys.stdout = io.TextIOWrapper(sys.stdout.buffer, encoding='utf-8')
sys.stderr = io.TextIOWrapper(sys.stderr.buffer, encoding='utf-8')

logging.basicConfig(
    level=logging.INFO,
    format='%(asctime)s - %(levelname)s - %(message)s',
    handlers=[
        logging.FileHandler('shopee_to_facebook.log', encoding='utf-8'),
        logging.StreamHandler(sys.stdout)
    ]
)

class ContentGenerator:
    def __init__(self):
        self._load_content_templates()
        self._init_emoji_patterns()

    def _load_content_templates(self):
        self.templates = {
            "captions": [
                "üåü {productName} - S·∫£n ph·∫©m ƒëang l√†m m∆∞a l√†m gi√≥ tr√™n shopee!\n{emoji}\n{hashtags}",
                "üî• {productName} - L·ª±a ch·ªçn ho√†n h·∫£o cho b·∫°n!\n{emoji}\n{hashtags}",
                "üì¢ ƒê·ª´ng b·ªè l·ª°: {productName} {emoji}\n{hashtags}",
                "üéØ {productName} - Gi·∫£i ph√°p tuy·ªát v·ªùi cho nhu c·∫ßu c·ªßa b·∫°n\n{emoji}\n{hashtags}",
                "üö® {productName} - S·∫£n ph·∫©m ƒë∆∞·ª£c y√™u th√≠ch hi·ªán nay!\n{emoji}\n{hashtags}",
                "B·∫°n ƒë√£ kh√°m ph√° {productName} ch∆∞a? {emoji}\n{hashtags}",
                "{productName} - Tr·∫£i nghi·ªám m·ªõi m·∫ª ƒëang ch·ªù b·∫°n!\n{emoji}\n{hashtags}",
